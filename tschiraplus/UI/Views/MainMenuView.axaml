<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:UI.ViewModels"
        x:Class="UI.Views.MainMenuView"
        x:DataType="vm:MainMenuViewModel">
    
    <StackPanel Orientation="Vertical" Spacing="10">
        <StackPanel Orientation="Horizontal">
            <Button Content="Logout" Command="{Binding LogoutUserCommand}" />
        </StackPanel>
        
        <TabControl ItemsSource="{Binding Tabs}" SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}" TabStripPlacement="Left">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Header}" MaxWidth="150" TextTrimming="CharacterEllipsis"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate DataType="vm:TabItemViewModel">
                    <ContentControl Content="{Binding Content}" />
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </StackPanel>
    
</UserControl>
