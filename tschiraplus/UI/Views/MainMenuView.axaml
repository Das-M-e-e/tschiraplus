<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:UI.ViewModels"
        x:Class="UI.Views.MainMenuView"
        x:DataType="vm:MainMenuViewModel">
    
    <Grid RowDefinitions="*,Auto">
        
        
        <TabControl Grid.Row="0" ItemsSource="{Binding Tabs}" SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}" TabStripPlacement="Left">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Header}" MaxWidth="150" TextTrimming="CharacterEllipsis"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate DataType="vm:TabItemViewModel">
                    <ContentControl Content="{Binding Content}" />
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
        
            <Grid Grid.Row="1" Height="60" >
                <StackPanel  Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Button Classes="SecondaryActions" Content="Logout" FontSize="16" Margin="50,0,0,10" Command="{Binding LogoutUserCommand}">
                    </Button>
                </StackPanel>
            </Grid>
        
    </Grid>
    
</UserControl>
