<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Styles.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <MergeResourceInclude Source="DarkThemeDictionary.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Styles.Resources>

    <!-- Standard TextBox Style -->
    <Style Selector="TextBox">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Background" Value="{DynamicResource TextBoxBackground}" />
        <Setter Property="Foreground" Value="{DynamicResource Foreground}" />
        <Setter Property="CornerRadius" Value="0" />
    </Style>
    
    <!-- TaskDetailsView -->
    <Style Selector="TextBox.TaskDetailsBoxes">
        <Setter Property="Foreground" Value="{DynamicResource Foreground}"></Setter>
        <Setter Property="Background" Value="{DynamicResource TextBoxBackground}"></Setter>
        <Setter Property="BorderBrush" Value="{DynamicResource DividerColor}"></Setter>
        <Setter Property="BorderThickness" Value="1"></Setter>
        <Setter Property="FontSize" Value="14"></Setter>
        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        <Setter Property="Margin" Value="0,8,0,15"></Setter>
        <Setter Property="Height" Value="100"></Setter>
        <Setter Property="Width" Value="500"></Setter>
    </Style>
    
    <!-- Title Textbox -->
    <Style Selector="TextBox.TitleTextBox">
        <Setter Property="Foreground" Value="White"></Setter>
        <Setter Property="FontSize" Value="30"></Setter>
        <Setter Property="FontWeight" Value="SemiBold"></Setter>
    </Style>
</Styles>
