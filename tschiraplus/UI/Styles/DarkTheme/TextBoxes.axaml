<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Styles.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <MergeResourceInclude Source="DarkThemeDictionary.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Styles.Resources>

    <!-- LogIn View -->
    <Style Selector="TextBox.SignInBoxes">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Background" Value="{DynamicResource TextBoxBackground}" />
    </Style>
    
    <!-- TaskDetailsView -->
    <Style Selector="TextBox.TaskDetailsBoxes">
        <Setter Property="Foreground" Value="{DynamicResource DarkThemeForeground}"></Setter>
        <Setter Property="Background" Value="{DynamicResource TextBoxBackground}"></Setter>
        <Setter Property="BorderBrush" Value="{DynamicResource DividerColor}"></Setter>
        <Setter Property="BorderThickness" Value="1"></Setter>
        <Setter Property="FontSize" Value="14"></Setter>
        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        <Setter Property="Margin" Value="0,8,0,15"></Setter>
        <Setter Property="Height" Value="100"></Setter>
        <Setter Property="Width" Value="500"></Setter>
    </Style>
</Styles>
