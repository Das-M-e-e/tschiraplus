<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="UI.App"
             xmlns:local="using:UI"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://UI/Styles/LightTheme/GlobalStyles.axaml" />
        <StyleInclude Source="avares://UI/Styles/LightTheme/Buttons.axaml" />
        <StyleInclude Source="avares://UI/Styles/LightTheme/TextBlocks.axaml" />
        <StyleInclude Source="avares://UI/Styles/LightTheme/TextBoxes.axaml" />
        <StyleInclude Source="avares://UI/Styles/LightTheme/Borders.axaml" />
        <StyleInclude Source="avares://UI/Styles/LightTheme/Other.axaml" />
        <StyleInclude Source="avares://UI/Styles/LightTheme/Calender.axaml" />
    </Application.Styles>
</Application>